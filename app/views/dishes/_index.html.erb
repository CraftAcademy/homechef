<ul>
  <div class="row">
    <% @dishes.each do |dish| %>
        <div class="col-lg-1">
          <li id="dish_<%= dish.id %>" style="list-style-type: none;">
            <div class="col" style="text-align: center; font-size: large; margin-top:20px">
              <%= dish.name.humanize %><br/>
            </div>
            <div class="row">
              <div class="col-lg-2 col-lg-offset-5">
                <button type="button" class="btn btn-default" style="
                width: 25px;
                    height: 25px;
                    text-align: center;
                    line-height: 50%;
                    padding-left: 5px;
                    border-radius: 50%;
                    background: transparent;"
                        data-toggle="modal" data-target="#DishModal">
                  <span class="glyphicon-plus" style="font-size: 25px;"></span></button>
                <div id="DishModal" class="modal fade" role="dialog">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title"><%= dish.name.humanize %><br/></h4>
                      </div>
                      <div class="modal-body">
                        <%= dish.description.humanize %><br/>
                        Price: $<%= dish.price %><br/>
                        Ready for pick-up at <%= dish.ready_time.strftime('%H:%M') %><br/>
                        <%= dish.portions %> portions left
                        <%= form_tag add_to_order_path, id: "dish-#{dish.id}" do %>
                            <%= hidden_field_tag :dish_id, dish.id %>
                            <%= submit_tag "Add dish", class: "btn btn-primary btn-sm" %>
                        <% end %>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </li>
        </div>
    <% end %>
  </div>
</ul>
